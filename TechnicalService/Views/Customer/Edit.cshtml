@model TechnicalService.Dto.WorkDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .text-danger {
        color: red;
        font-weight: bold;
        font-size: 10px;
    }
</style>

<h1>Servis Talep Kaydı Düzenle</h1>
<br />
<form asp-action="Edit" asp-controller="Customer" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Ad</label>
            <input type="text" asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Soyad</label>
            <input type="text" asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Telefon</label>
            <input type="text" asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Müşteri No</label>
            <input type="text" asp-for="CustomerNo" class="form-control">
            <span asp-validation-for="CustomerNo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Ürün İsmi</label>
            <input type="text" asp-for="ProductName" class="form-control">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label for="exampleFormControlSelect1">Ürün Kategorisi</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" class="form-control" id="exampleFormControlSelect1">
            </select>
        </div>

        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Garanti Süresi</label>
            <input type="text" asp-for="InsurancePeriod" class="form-control">
            <span asp-validation-for="InsurancePeriod" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label for="exampleFormControlInput1">Marka</label>
            <input type="text" asp-for="Brand" class="form-control">
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Arza Açıklaması</label>
        <textarea class="form-control" asp-for="ProblemDescription" id="exampleFormControlTextarea1" rows="5"></textarea>
        <span asp-validation-for="ProblemDescription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success btn-block">Düzenle</button>
</form>

